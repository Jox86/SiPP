# ========================================
# CONFIGURACIÓN DE LA APLICACIÓN
# ========================================

# Entorno de ejecución
NODE_ENV=development

# Puerto de la aplicación
PORT=3000

# URL base de la aplicación
REACT_APP_BASE_URL=http://localhost:3000

# ========================================
# SEGURIDAD Y AUTENTICACIÓN
# ========================================

# Clave secreta para encryption (generar una clave segura)
REACT_APP_ENCRYPTION_KEY=tu_clave_super_secreta_aqui_32_caracteres_min

# Tiempo de expiración de sesión (en segundos)
REACT_APP_SESSION_TIMEOUT=7200

# ========================================
# APIs y SERVICIOS EXTERNOS
# ========================================

# OpenAI API Key
REACT_APP_OPENAI_API_KEY=sk-tu_api_key_de_openai_aqui

# Configuración del modelo de IA
REACT_APP_AI_MAX_TOKENS=150
REACT_APP_AI_TEMPERATURE=0.7
REACT_APP_AI_MODEL=gpt-3.5-turbo

# ========================================
# BASE DE DATOS y CACHE
# ========================================

# Redis
REACT_APP_REDIS_URL=redis://localhost:6379
REACT_APP_REDIS_PASSWORD=tu_password_redis_si_tiene

# MongoDB o base de datos principal
REACT_APP_DATABASE_URL=mongodb://localhost:27017/sipp-app

# ========================================
# MONITOREO Y ANALYTICS
# ========================================

# Sentry para monitoreo de errores
REACT_APP_SENTRY_DSN=https://tu_dsn_de_sentry@sentry.io/tu_project_id

# Google Analytics
REACT_APP_GA_TRACKING_ID=G-TU_ID_DE_GOOGLE_ANALYTICS

# LogRocket
REACT_APP_LOGROCKET_APP_ID=tu_app_id_de_logrocket

# ========================================
# CONFIGURACIONES DE SEGURIDAD AVANZADA
# ========================================

# Rate limiting
REACT_APP_RATE_LIMIT_MAX_REQUESTS=100
REACT_APP_RATE_LIMIT_WINDOW_MS=900000

# Configuración de CORS
REACT_APP_CORS_ORIGIN=http://localhost:3000

# Timeouts para requests
REACT_APP_API_TIMEOUT=10000

# ========================================
# CONFIGURACIONES ESPECÍFICAS DEL CHAT IA
# ========================================

# Límite de caracteres por mensaje
REACT_APP_CHARACTER_LIMIT=1000

# Tiempo máximo de sesión de chat (minutos)
REACT_APP_CHAT_SESSION_TIMEOUT=30

# Número máximo de conversaciones simultáneas
REACT_APP_MAX_CONVERSATIONS=5